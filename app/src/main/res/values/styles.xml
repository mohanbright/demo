<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Base App Color Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bottomBarSelected</item>

        <!-- Base Windows Theme -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorBackground">@color/colorPrimary</item>

        <!-- Base Text Theme-->
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/placeHolderText</item>
        <item name="android:actionMenuTextColor">@color/linksCtas</item>
        <item name="android:statusBarColor">@color/linksCtas</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarTextAppearance</item>
    </style>

    <style name="ActionBarTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle">
        <item name="android:background">@color/mainBackground</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>

    <!-- Bottom Navigation Text Style Passive -->
    <style name="BottomNavigationStyleText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Bottom Navigation Text Style Active -->
    <style name="BottomNavigationStyleText.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="AlertDialogTheme.White" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>
</resources>
